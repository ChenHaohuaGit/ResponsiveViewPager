<?xml version="1.0" encoding="utf-8"?>
<com.example.edward.responsiveviewpager.ResponsiveRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.edward.responsiveviewpager.ResponsiveImageview
        android:layout_width="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_terrain_black_24dp"
        android:layout_height="200dp"
        app:direction="0"
        android:id="@+id/responsiveImageview" />

    <com.example.edward.responsiveviewpager.ResponsiveImageview
        android:layout_width="100dp"
        android:src="@drawable/ic_wb_sunny_black_24dp"
        android:layout_height="100dp"
        android:layout_marginTop="11dp"
        android:id="@+id/responsiveImageview2"
        app:direction="3"
        android:layout_alignTop="@+id/responsiveImageview"
        android:layout_alignLeft="@+id/responsiveImageview"
        android:layout_alignStart="@+id/responsiveImageview" />
</com.example.edward.responsiveviewpager.ResponsiveRelativeLayout>