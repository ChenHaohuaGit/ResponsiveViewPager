<?xml version="1.0" encoding="utf-8"?>
<com.example.edward.responsiveviewpager.ResponsiveRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_purple"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.edward.responsiveviewpager.ResponsiveImageview
        android:layout_width="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_group_black_24dp"
        android:layout_height="200dp"
        app:direction="1"
        android:tint="@android:color/darker_gray"
        android:id="@+id/responsiveImageview" />

    <com.example.edward.responsiveviewpager.ResponsiveImageview
        android:layout_width="100dp"
        android:src="@drawable/ic_favorite_black_24dp"
        android:layout_height="100dp"
        android:id="@+id/responsiveImageview2"
        app:direction="2"
        android:tint="@android:color/holo_red_light"
        android:layout_alignBottom="@+id/responsiveImageview"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="123dp" />
</com.example.edward.responsiveviewpager.ResponsiveRelativeLayout>