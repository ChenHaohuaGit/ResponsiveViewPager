<?xml version="1.0" encoding="utf-8"?>
<com.example.edward.responsiveviewpager.ResponsiveRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.edward.responsiveviewpager.ResponsiveImageview
        android:layout_width="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_insert_emoticon_black_24dp"
        android:layout_height="200dp"
        app:direction="4"
        android:tint="@android:color/holo_blue_bright"
        android:id="@+id/responsiveImageview" />

    <com.example.edward.responsiveviewpager.ResponsiveImageview
        android:layout_width="200dp"
        android:src="@drawable/ic_school_black_24dp"
        android:layout_height="200dp"
        android:id="@+id/responsiveImageview2"
        app:direction="3"
        android:tint="@android:color/black"
        android:layout_alignBottom="@+id/responsiveImageview"
        android:layout_marginBottom="123dp"
        android:layout_alignLeft="@+id/responsiveImageview"
        android:layout_alignStart="@+id/responsiveImageview" />
</com.example.edward.responsiveviewpager.ResponsiveRelativeLayout>