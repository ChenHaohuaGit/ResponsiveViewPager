<?xml version="1.0" encoding="utf-8"?>
<com.example.edward.responsiveviewpager.ResponsiveRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.edward.responsiveviewpager.ResponsiveImageview
        android:layout_width="200dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_launcher"
        android:layout_height="200dp"
        app:direction="4"
        android:id="@+id/responsiveImageview" />

    <com.example.edward.responsiveviewpager.ResponsiveImageview
        android:layout_width="100dp"
        android:src="@drawable/ic_camera_alt_black_24dp"
        android:layout_height="100dp"
        android:layout_marginTop="33dp"
        android:id="@+id/responsiveImageview2"
        app:direction="2"
        android:tint="@android:color/black"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_alignTop="@+id/responsiveImageview"
        android:layout_alignLeft="@+id/responsiveImageview"
        android:layout_alignStart="@+id/responsiveImageview" />
</com.example.edward.responsiveviewpager.ResponsiveRelativeLayout>